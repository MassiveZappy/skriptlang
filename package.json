{
  "name": "tree-sitter-skriptlang",
  "version": "0.1.0",
  "description": "Skript grammar for Tree-sitter",
  "main": "bindings/node",
  "scripts": {
    "build": "tree-sitter generate",
    "test": "tree-sitter test",
    "prepare-extension": "mkdir -p dist/grammars && cp -r src dist/grammars/skriptlang && cp -r queries dist/",
    "package": "npm run build && npm run prepare-extension && cd dist && zip -r ../skriptlang-extension.zip *"
  },
  "keywords": [
    "parser",
    "lexer",
    "skript",
    "language",
    "tree-sitter",
    "grammar",
    "minecraft",
    "zed-editor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "nan": "^2.17.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.20.8"
  },
  "tree-sitter": [
    {
      "scope": "source.skript",
      "file-types": [
        "sk"
      ],
      "highlights": [
        "queries/highlights.scm"
      ],
      "indents": [
        "queries/indents.scm"
      ]
    }
  ],
  "zed": {
    "name": "skriptlang",
    "version": "0.1.0",
    "description": "Skript language support for Zed Editor",
    "author": "",
    "repository": "https://github.com/user/tree-sitter-skriptlang",
    "grammars": {
      "skriptlang": "grammars/skriptlang"
    }
  }
}
